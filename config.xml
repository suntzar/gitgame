<?xml version='1.0' encoding='utf-8'?>
<widget id="com.suntzar.voito" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    
    <!-- 1. Informações Básicas do Aplicativo -->
    <name>V-Oito</name>
    <description>
        Um chatbot inteligente com a tecnologia V-Oito.
    </description>
    <author email="contato@suntzar.com" href="https://github.com/suntzar">
        Suntzar
    </author>
    
    <!-- 2. Configurações Centrais do Cordova -->
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <!-- 3. Preferências Globais -->
    <!-- Melhora a sensação nativa ao desabilitar o "bounce" de rolagem -->
    <preference name="DisallowOverscroll" value="true" />
    
    <!-- 4. Configurações Específicas da Plataforma Android -->
    <platform name="android">
        <allow-intent href="market:*" />

        <!-- Comportamento da Interface Nativa -->
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="KeyboardResize" value="true" />
        
        <!-- Cores das Barras do Sistema -->
        <preference name="StatusBarBackgroundColor" value="#2e2e2e" />
        <preference name="StatusBarStyle" value="lightcontent" />
        <preference name="NavigationBarColor" value="#2a2a2a" />

        <!-- 
